@page "/processor/{payload}"
@using Microsoft.AspNetCore.Identity
@using Domain.Entities
@layout EmptyLayout
@inject SignInManager<User> signInManager;
@inject NavigationManager navigationManager;
@inject EncryptionHelper<LoginDTO> encrypt;
